{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/output.csv"
    },
    "config": {
        "legend": {
            "orient": "top-right"
        }
    },
    "transform": [
        {
            "calculate": "split(datum.state, ' ')[0]",
            "as": "state_code"
        },
        {
            "calculate": "slice(split(datum.state, '(')[1], 0, -1)",
            "as": "state_name"
        },
        {
            "calculate": "timeParse(split(datum.ignition_date, 'T')[0], '%Y-%m-%d')",
            "as": "ignition_date"
        },
        {
            "calculate": "datetime(year(datum.ignition_date), month(datum.ignition_date))",
            "as": "ignition_month"
        },
        {
            "calculate": "datum.shape_area * 973205.204434",
            "as": "true_shape_area"
        },
        {
            "filter": "year(datum.ignition_date) >= 1900 && datum.fire_type == 'Bushfire'"
        }
    ],
    "width": "container",
    "height": 1000,
    "layer": [
        {
            "data": {
                "values": [
                    {
                        "start": "1938",
                        "end": "1939",
                        "event": "Black Friday Bushfires",
                        "state": "New South Wales"
                    },
                    {
                        "start": "1966",
                        "end": "1967",
                        "event": "Black Tuesday",
                        "state": "Tasmania"
                    },
                    {
                        "start": "1980",
                        "end": "1983",
                        "event": "Ash Wednesday",
                        "state": "South Australia"
                    },
                    {
                        "start": "2002",
                        "end": "2003",
                        "event": "Canberra Bushfires",
                        "state": "Australian Capital Territory"
                    },
                    {
                        "start": "2008",
                        "end": "2009",
                        "event": "Black Saturday",
                        "state": "Victoria"
                    },
                    {
                        "start": "2019",
                        "end": "2020",
                        "event": "Hottest Year",
                        "state": "New South Wales"
                    }
                ],
                "format": {
                    "parse": {
                        "start": "date:'%Y'",
                        "end": "date:'%Y'"
                    }
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "rect",
                        "opacity": 0.5,
                        "stroke": "black"
                    },
                    "encoding": {
                        "y": {
                            "field": "start",
                            "timeUnit": "year"
                        },
                        "y2": {
                            "field": "end",
                            "timeUnit": "year"
                        },
                        "color": {
                            "field": "state",
                            "type": "nominal",
                            "legend": null
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "baseline": "bottom",
                        "align": "right",
                        "x": "width",
                        "xOffset": -3,
                        "yOffset": -2,
                        "color": "black"
                    },
                    "encoding": {
                        "text": {
                            "field": "event"
                        },
                        "y": {
                            "field": "start",
                            "timeUnit": "year"
                        }
                    }
                }
            ]
        },
        {
            "mark": "area",
            "params": [
                {
                    "name": "my_brush",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "y"
                        ]
                    }
                }
            ],
            "encoding": {
                "y": {
                    "field": "ignition_date",
                    "timeUnit": "year",
                    "type": "temporal",
                    "title": "Ignition Date",
                    "sort": "descending"
                },
                "x": {
                    "aggregate": "sum",
                    "field": "area_ha",
                    "type": "quantitative",
                    "title": "Burnt Area (Hectares)",
                    "axis": {
                        "orient": "top"
                    }
                },
                "color": {
                    "field": "state_name",
                    "type": "nominal",
                    "title": "State",
                    "legend": {
                        "orient": "top-right"
                    }
                },
                "tooltip": [
                    {
                        "field": "year",
                        "timeUnit": "year",
                        "title": "Year"
                    },
                    {
                        "field": "state_name",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "aggregate": "sum",
                        "field": "area_ha",
                        "title": "Area Burned (Hectare)"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "data/annual-average.csv"
            },
            "transform": [
                {
                    "calculate": "datetime(datum.Category, 0)",
                    "as": "year"
                }
            ],
            "mark": {
                "type": "line",
                "color": "maroon"
            },
            "encoding": {
                "y": {
                    "field": "year",
                    "timeUnit": "year",
                    "sort": "descending"
                },
                "x": {
                    "field": "Annual Mean",
                    "type": "quantitative",
                    "title": "Average Air Temperature (C)",
                    "scale": {
                        "domain": [
                            20,
                            24
                        ]
                    },
                    "axis": {
                        "orient": "bottom"
                    }
                },
                "tooltip": [
                    {
                        "field": "Annual Mean",
                        "type": "quantitative",
                        "title": "Temperature (C)"
                    },
                    {
                        "field": "year",
                        "timeUnit": "year",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "data/annual-average.csv"
            },
            "transform": [
                {
                    "calculate": "datetime(datum.Category, 0)",
                    "as": "year"
                }
            ],
            "mark": {
                "type": "line",
                "strokeWidth": 10,
                "opacity": 0.5,
                "color": "maroon"
            },
            "encoding": {
                "y": {
                    "field": "year",
                    "timeUnit": "year",
                    "sort": "descending"
                },
                "x": {
                    "field": "5-yr smooth",
                    "type": "quantitative",
                    "title": "Average Air Temperature (C)",
                    "scale": {
                        "domain": [
                            20,
                            24
                        ]
                    },
                    "axis": null
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "x": "independent"
        },
        "legend": {
            "color": "independent"
        }
    }
}