{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "data": {
        "url": "geometry/ABS_land_env_SA2_subset.json",
        "format": {
            "type": "topojson",
            "feature": "ABS_land_env_SA2"
        }
    },
    "transform": [
        {
            "calculate": "100 * datum.properties.lcover_320 / datum.properties.land2021",
            "as": "grass%"
        }
    ],
    "layer": [
        {
            "data": {
                "url": "geometry/ne_10m_graticules_5.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "white",
                "stroke": "lightgray"
            }
        },
        {
            "params": [
                {
                    "name": "hover",
                    "select": {
                        "type": "point",
                        "on": "pointerover"
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black"
            },
            "encoding": {
                "fill": {
                    "field": "grass%",
                    "type": "quantitative",
                    "title": "Herbaceous Vegetation (%)"
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "hover",
                            "empty": false,
                            "value": 2
                        }
                    ],
                    "value": 1
                },
                "tooltip": [
                    {
                        "field": "properties.sa2_name_2",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "grass%",
                        "type": "quantitative",
                        "title": "Herbaceous Vegetation (%)"
                    },
                    {
                        "field": "properties.land2021",
                        "type": "quantitative",
                        "format": "000.0f",
                        "title": "Total Area (Hectare)"
                    },
                    {
                        "field": "hover",
                        "type": "nominal"
                    }
                ]
            }
        }
    ]
}